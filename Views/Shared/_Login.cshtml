
@if (Request.IsAuthenticated)
{
    <span class="navbar-text">Hello, @User.Identity.Name!</span>

    using (Html.BeginForm("Logout", "Auth", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav">
            <li class="nav-item">  <a class="nav-link text-dark" href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
        </ul>
       // <a class="nav-link text-dark" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
    }
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">@Html.ActionLink("Login", "Login", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-dark" })</li>
    </ul>
}
